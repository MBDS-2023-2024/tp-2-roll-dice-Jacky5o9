<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miage.mbds.diceroller.MainActivity">

    <TextView
        android:id="@+id/tagLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/nb_find"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/targetNumberInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="1..6"
        android:hint="@string/nb_cible"
        android:textSize="30sp"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tagLabel"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/diceImage1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dice_1"
        android:layout_below="@id/targetNumberInput"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/diceImage2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/diceImage2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dice_1"
        android:layout_below="@id/targetNumberInput"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diceImage1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>